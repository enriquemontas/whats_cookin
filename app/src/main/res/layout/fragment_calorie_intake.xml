<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragments.CalorieIntakeFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Estimated Calorie Intake Today" />

    <TextView
        android:id="@+id/tvCalorieDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/tvCalorieGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCalorieDisplay"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Goal Calories: " />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/gvCalStats"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@id/btnLogout"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/btnStartDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogout"
        android:text="Start Day"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Logout"
        android:layout_marginBottom="10dp" />

</RelativeLayout>