<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragments.CalorieIntakeFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:text="Estimated Calorie Intake Today" />

    <TextView
        android:id="@+id/tvCalorieDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

    <TextView
        android:id="@+id/tvCalorieGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvCalorieDisplay"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/colorAccent2"
        android:text="Goal Calories: " />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/gvCalStats"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tvCalorieGoal"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnStartDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Start Day"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        style="@style/Widget.AppCompat.Button.Colored"/>

</RelativeLayout>